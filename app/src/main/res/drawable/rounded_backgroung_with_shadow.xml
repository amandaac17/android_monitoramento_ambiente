<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80000000" /> <!-- Cor da sombra -->
            <corners android:radius="16dp" /> <!-- Cantos arredondados -->
        </shape>
    </item>
    <!-- Fundo branco -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Cor do fundo branco -->
            <corners android:radius="16dp" /> <!-- Cantos arredondados -->
        </shape>
    </item>
</layer-list>
